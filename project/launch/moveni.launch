<launch>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen" clear_params="true">
    <rosparam file="$(find project)/config/ni/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find project)/config/ni/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find project)/config/ni/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find project)/config/ni/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find project)/config/ni/move_base_params.yaml" command="load" />
  </node>
  
</launch>
